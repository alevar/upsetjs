  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgratzl/upsetjs.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "postinstallX": "lerna bootstrap --ignore-scripts",
    "clean": "lerna clean",
    "publish:canary": "lerna publish --canary",
    "lint": "lerna run --stream lint --if-present",
    "test": "lerna run --stream test",
    "build": "lerna run --stream build --if-present",
    "start": "lerna run --stream"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.18",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  }
}
