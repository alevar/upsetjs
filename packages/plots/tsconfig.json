{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": false,
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"]
    }
  }
}
