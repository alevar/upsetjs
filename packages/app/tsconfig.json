{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./",
    "baseUrl": "./",
    "composite": false,
    "assumeChangesOnlyAffectDirectDependencies": false,
    "useDefineForClassFields": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"]
}
