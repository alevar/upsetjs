{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declarationMap": true,
    "paths": {
      "@": ["./src"],
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"],
      "*": ["*", "node_modules/*"]
    }
  }
}
